@Configuration
public class CacheConfig {

    @Bean
    public jakarta.cache.CacheManager jCacheManager() throws Exception {
        return Caching.getCachingProvider().getCacheManager(
            getClass().getResource("/ehcache.xml").toURI(),
            getClass().getClassLoader()
        );
    }

    @Bean
    public org.springframework.cache.CacheManager cacheManager(jakarta.cache.CacheManager jCacheManager) {
        return new org.springframework.cache.jcache.JCacheCacheManager(jCacheManager);
    }
}
